{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Hello",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/prog-hello",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "preLaunchTask": "build-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Attach Hello",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/prog-hello",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        },
